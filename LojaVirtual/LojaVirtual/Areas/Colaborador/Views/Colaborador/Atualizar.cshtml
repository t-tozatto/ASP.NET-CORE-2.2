@model Colaborador
@{
    ViewData["Title"] = "Atualizar";
}

<h3>@ViewData["Title"]</h3>


<form method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Tipo" />
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" placeholder="Digite o nome do colaborador">
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input type="email" asp-for="Email" class="form-control" placeholder="Digite o e-mail do colaborador">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Atualizar</button>
    <a asp-action="Index" class="btn btn-dark">Voltar</a>
</form>

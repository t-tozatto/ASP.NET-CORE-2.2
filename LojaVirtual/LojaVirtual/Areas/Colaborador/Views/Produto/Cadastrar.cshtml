@model Produto
@{
    ViewData["Title"] = "Cadastrar";

}
<h3>@ViewData["Title"]</h3>

<form method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Nome"></label>
            <input asp-for="Nome" class="form-control" placeholder="Digite o nome do produto">
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-group col-md-6">
            <label asp-for="CategoriaId"></label>
            <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.Categorias">
                <option value="">Selecione</option>
            </select>
            <span asp-validation-for="CategoriaId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Descricao"></label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Valor"></label>
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                    <div class="input-group-text">R$</div>
                </div>
                <input asp-for="Valor" class="form-control dinheiro" placeholder="Digite o valor">
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Quantidade"></label>
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                    <div class="input-group-text">UN</div>
                </div>
                <input type="number" asp-for="Quantidade" class="form-control" placeholder="Digite a quantidade em estoque">
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="Peso"></label>
            <div class="input-group mb-2">
                <input asp-for="Peso" class="form-control" placeholder="Digite o peso">
                <div class="input-group-prepend">
                    <div class="input-group-text">kg</div>
                </div>
                <span asp-validation-for="Peso" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="Largura"></label>
            <div class="input-group mb-2">
                <input type="number" asp-for="Largura" class="form-control" placeholder="Digite a largura">
                <span asp-validation-for="Largura" class="text-danger"></span>
                <div class="input-group-prepend">
                    <div class="input-group-text">cm</div>
                </div>
            </div>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="Altura"></label>
            <div class="input-group mb-2">
                <input type="number" asp-for="Altura" class="form-control" placeholder="Digite a altura">
                <span asp-validation-for="Altura" class="text-danger"></span>
                <div class="input-group-prepend">
                    <div class="input-group-text">cm</div>
                </div>
            </div>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="Comprimento"></label>
            <div class="input-group mb-2">
                <input type="number" asp-for="Comprimento" class="form-control" placeholder="Digite o comprimento">
                <span asp-validation-for="Comprimento" class="text-danger"></span>
                <div class="input-group-prepend">
                    <div class="input-group-text">cm</div>
                </div>
            </div>
        </div>
    </div>

    <div class="row Imagens">
        @{
            for (int i = 0; i < 12; i++)
            {
                @if (Model != null && Model.Imagens.ElementAtOrDefault(i) != null)
                {
                    <div class="col-md-1">
                        <input type="file" class="input-file" />
                        <div class="container-img-thumbnail">
                            <img src="@Model.Imagens.ElementAtOrDefault(i).Caminho" class="img-thumbnail rounded img-upload" />
                            <div class="btn btn-danger btn-imagem-excluir">X</div>
                        </div>
                        <input type="hidden" name="imagem" value="@Model.Imagens.ElementAtOrDefault(i).Caminho" />
                    </div>
                }
                else
                {
                    <div class="col-md-1">
                        <input type="file" class="input-file" />
                        <div class="container-img-thumbnail">
                            <img src="~/img/imagem-padrao.png" class="img-thumbnail rounded img-upload" />
                        </div>
                        <div class="btn btn-danger btn-imagem-excluir btn-ocultar">X</div>
                        <input type="hidden" name="imagem" />
                    </div>
                }
            }
        }
    </div>

    <button type="submit" class="btn btn-primary">Cadastrar</button>
    <a asp-action="Index" class="btn btn-dark">Voltar</a>
</form>

